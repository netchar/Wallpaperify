<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">


    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="1000"
        motion:motionInterpolator="linear">
        <OnSwipe
            motion:touchAnchorId="@+id/photo_details_constraint_bottom_panel"
            motion:touchAnchorSide="top" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@id/photo_details_constraint_bottom_panel"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            motion:layout_constraintBottom_toBottomOf="parent">

            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="#30000000" />
        </Constraint>


        <Constraint android:id="@+id/photo_details_author_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/photo_details_tv_description"
            motion:srcCompat="@android:drawable/sym_def_app_icon">
            <!--<CustomAttribute-->
                <!--motion:attributeName="textColor"-->
                <!--motion:customColorValue="#FFF" />-->

        </Constraint>

        <!--<Constraint-->
        <!--android:id="@+id/textView9">-->
        <!--<CustomAttribute-->
        <!--motion:attributeName="textColor"-->
        <!--motion:customColorValue="#000000" />-->

        <!--</Constraint>-->
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/photo_details_constraint_bottom_panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHeight_percent="0.45">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="#f5f5f5" />
        </Constraint>

        <Constraint android:id="@+id/photo_details_author_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/photo_details_tv_description"
            motion:srcCompat="@android:drawable/sym_def_app_icon">
            <!--<CustomAttribute-->
            <!--motion:attributeName="textColor"-->
            <!--motion:customColorValue="#FFF" />-->

        </Constraint>

        <!--<Constraint android:id="@+id/textView9">-->
            <!--<CustomAttribute-->
                <!--motion:attributeName="textColor"-->
                <!--motion:customColorValue="#FFF" />-->

        <!--</Constraint>-->

        <!--<Constraint-->
        <!--android:id="@+id/textView9">-->
        <!--<CustomAttribute-->
        <!--motion:attributeName="textColor"-->
        <!--motion:customColorValue="#FFF" />-->

        <!--</Constraint>-->
    </ConstraintSet>

</MotionScene>