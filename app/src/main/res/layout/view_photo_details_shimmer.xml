<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <View
        android:id="@+id/photo_details_shimmer_description"
        android:layout_width="250dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:background="#f3f3f3"
        app:layout_constraintBottom_toTopOf="@+id/photo_details_shimmer_author_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/photo_details_shimmer_author_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_round_oval"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo_details_shimmer_description"
        tools:srcCompat="@tools:sample/avatars" />

    <View
        android:id="@+id/photo_details_shimmer_photo_by_txt"
        android:layout_width="120dp"
        android:layout_height="14dp"
        android:layout_marginStart="8dp"
        android:background="#f3f3f3"
        app:layout_constraintBottom_toBottomOf="@+id/photo_details_shimmer_author_img"
        app:layout_constraintStart_toEndOf="@+id/photo_details_shimmer_author_img"
        app:layout_constraintTop_toTopOf="@+id/photo_details_shimmer_author_img" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_thumb_up"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/photo_details_shimmer_likes_txt"
        app:layout_constraintEnd_toStartOf="@+id/photo_details_shimmer_likes_txt"
        app:layout_constraintTop_toTopOf="@+id/photo_details_shimmer_likes_txt" />

    <View
        android:id="@+id/photo_details_shimmer_likes_txt"
        android:layout_width="20dp"
        android:layout_height="12dp"
        android:layout_marginEnd="8dp"
        android:background="#f3f3f3"
        app:layout_constraintBottom_toBottomOf="@+id/photo_details_shimmer_photo_by_txt"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/photo_details_shimmer_photo_by_txt" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_file_download"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/photo_details_shimmer_total_downloads_txt"
        app:layout_constraintEnd_toStartOf="@+id/photo_details_shimmer_total_downloads_txt"
        app:layout_constraintTop_toTopOf="@+id/photo_details_shimmer_total_downloads_txt" />

    <View
        android:id="@+id/photo_details_shimmer_total_downloads_txt"
        android:layout_width="20dp"
        android:layout_height="12dp"
        android:layout_marginEnd="24dp"
        android:background="#f3f3f3"
        app:layout_constraintBottom_toBottomOf="@+id/photo_details_shimmer_likes_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/photo_details_shimmer_likes_txt" />

</androidx.constraintlayout.widget.ConstraintLayout>